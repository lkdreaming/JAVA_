		<aop:aspect id="MyAspect" ref="logInterceptor">
			<aop:before method="before" pointcut="execution(public * com.lk.spring.service..*.*(..))"/>
			<aop:after-returning method="after" pointcut="execution(public * com.lk.spring.service..*.*(..))"/>
		</aop:aspect>
