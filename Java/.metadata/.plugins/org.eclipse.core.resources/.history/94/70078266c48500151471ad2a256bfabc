import java.awt.event.*;
import java.awt.*;

public class Snake {
	Dir dir = Dir.R;
	Node head;
	Node tail;
	int x,y;
	int size;
	Yard yard;	
	private class Node {
		Node prev = null;
		Node next = null;
	}
	
	public void draw(Graphics g) {
		Color c = g.getColor();
		g.setColor(Color.BLACK);
		g.fillOval(x, y, Yard.BLOCK_SIZE, Yard.BLOCK_SIZE);
		g.setColor(c);
	}
	
	private void toWord() {
		switch(dir) {
		case U:
			
		case D:
		case L:
		case R:
		}
	}
	
	public void keyPressed(KeyEvent e) {
		int key = e.getKeyCode();
		
	}

}
